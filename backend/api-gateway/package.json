{
  "name": "api-gateway",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "proto:gen": "mkdir src/generated && protoc --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/generated --ts_proto_opt=nestJs=false --ts_proto_opt=useOptionals=messages --ts_proto_opt=outputServices=grpc-js --proto_path=proto user_service.proto chat_service.proto ai_service.proto",
    "proto:clean": "rm -rf src/generated",
    "prebuild": "npm run proto:generate"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.14",
    "@grpc/proto-loader": "^0.7.6",
    "@types/google-protobuf": "^3.15.12",
    "@types/request-ip": "^0.0.41",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "google-protobuf": "^3.21.4",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "rate-limit-redis": "^4.2.2",
    "redis": "^4.6.5",
    "request-ip": "^3.3.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-slow-down": "^1.3.5",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^24.3.0",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.7.7",
    "typescript": "^5.9.2"
  }
}
